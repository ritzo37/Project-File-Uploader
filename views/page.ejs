<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Explorer</title>
    <style>
      body {
        background-color: #1e1e1e;
        color: #f0f0f0;
        font-family: sans-serif;
        padding: 2rem;
      }

      h2 {
        margin-bottom: 1rem;
      }

      ul {
        list-style-type: none;
        padding: 0;
      }

      li {
        margin: 1rem 0;
      }

      .folder-container,
      .file-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #2c2c2c;
        padding: 0.8rem;
        border-radius: 6px;
      }

      a {
        color: #4ea1ff;
        text-decoration: none;
        font-weight: bold;
      }

      form {
        display: inline;
      }

      button {
        background-color: #444;
        color: white;
        border: none;
        padding: 0.4rem 0.8rem;
        margin-left: 0.4rem;
        border-radius: 4px;
        cursor: pointer;
      }

      button:hover {
        background-color: #666;
      }

      .upload-form,
      .create-folder-form {
        margin-top: 2rem;
      }

      .upload-form label {
        margin-right: 1rem;
      }

      .home-link {
        display: inline-block;
        margin-top: 2rem;
        text-decoration: none;
        color: white;
        background-color: #6c757d;
        padding: 0.5rem 1rem;
        border-radius: 5px;
      }

      .home-link:hover {
        background-color: #5a6268;
      }
    </style>
  </head>
  <body>
    <h2>Your current path: <%= path %></h2>

    <ul>
      <% folders.forEach((currFolder) => { %>
      <li>
        <div class="folder-container">
          <a href="/<%= userid %>/<%= currFolder.id %>">
            üìÅ <%= currFolder.folderName %>
          </a>
          <div>
            <form
              action="/<%= userid %>/<%= currFolder.id %>/updateFolder"
              method="get"
            >
              <button>Rename</button>
            </form>
            <form
              action="/<%= userid %>/<%= currFolder.id %>/deleteFolder"
              method="get"
            >
              <button>Delete</button>
            </form>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>

    <ul>
      <% files.forEach((currFile) => { %>
      <li>
        <div class="file-container">
          <a href="/<%= userid %>/<%= folderId %>/<%= currFile.fileId %>">
            üìÑ <%= currFile.fileName %>
          </a>
          <div>
            <form
              action="/<%= userid %>/<%= folderId %>/<%= currFile.fileId %>/deleteFile"
              method="get"
            >
              <button>Delete</button>
            </form>
            <form
              action="/<%= userid %>/<%= folderId %>/<%= currFile.fileId %>/fileDetails"
              method="get"
            >
              <button>Details</button>
            </form>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>

    <form
      class="create-folder-form"
      action="/<%= userid %>/<%= folderId %>/addFolder"
      method="get"
    >
      <button>Add Folder</button>
    </form>

    <form
      class="upload-form"
      action="/<%= userid %>/<%= folderId %>/addFile"
      method="post"
      enctype="multipart/form-data"
    >
      <label for="file">Upload a file:</label>
      <input type="file" name="file" id="file" required />
      <button>Upload</button>
    </form>
  </body>
</html>
